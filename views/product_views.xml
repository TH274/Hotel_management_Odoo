<odoo>
    <record id="view_hotel_product_form" model="ir.ui.view">
        <field name="name">hotel.product.form</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <form string="Hotel Product">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="service_type"/>
                        <field name="description" widget="text"/>
                        <field name="duration"/>
                        <field name="available"/>
                        <field name="room_id"/>
                        <field name="customer_id"/>
                        <field name="list_price"/>
                        <field name="total_cost" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hotel_product_tree" model="ir.ui.view">
        <field name="name">hotel.product.tree</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <tree string="Hotel Products">
                <field name="name"/>
                <field name="service_type"/>
                <field name="duration"/>
                <field name="available"/>
                <field name="room_id"/>
                <field name="customer_id"/>
                <field name="list_price"/>
                <field name="total_cost"/>
            </tree>
        </field>
    </record>

    <record id="action_hotel_product" model="ir.actions.act_window">
        <field name="name">Hotel Products</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_hotel_product_tree"/>
    </record>
</odoo>
