<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hotel_payment_wizard_form" model="ir.ui.view">
        <field name="name">hotel.payment.wizard.form</field>
        <field name="model">hotel.payment.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="hotel_id" />
                        <field name="room_id" />
                        <field name="payment_amount" />
                    </group>
                    <footer>
                        <button string="Confirm" type="object" name="action_confirm_payment"
                            class="btn-primary" />
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

   