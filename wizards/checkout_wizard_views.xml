<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hotel_checkout_wizard_form" model="ir.ui.view">
        <field name="name">hotel.checkout.wizard.form</field>
        <field name="model">hotel.checkout.wizard</field>
        <field name="arch" type="xml">
            <form string="Checkout">
                <sheet>
                    <group>
                        <field name="hotel_id" readonly="1" />
                        <field name="room_id" readonly="1" />
                        <field name="payment_amount" string="Amount to Pay" readonly="1" />
                    </group>
                    <footer>
                        <button string="Confirm Checkout" type="object" name="action_confirm_checkout" class="btn-primary" />
                        <button string="Cancel" type="object" class="btn-secondary" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
